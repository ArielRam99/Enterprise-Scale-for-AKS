{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "private_endpoint_acr": {
            "type": "String"
        },
        "private_endpoint_keyVault": {
            "type": "string"
        },
        "acr_name":{
            "type": "string"
        },
        "keyVault_name":{
            "type": "string"
        }
    },
    "variables": {
        "spokeVnetName": "vnet_spoke_arm",
        "privateEndpointSubnet": "aks-privateEndpoint",
        "uniqueVaultName": "[concat(parameters('keyvault_Name'),'-',take(uniqueString(resourceGroup().id),3))]",
        "uniqueAcrName": "[concat(parameters('acr_Name'),take(uniqueString(resourceGroup().id),3))]",
        "private_acr_dns_zone": "privatelink.azurecr.io",
        "private_keyVault_dns_zone": "privatelink.vaultcore.azure.net",
        "private_endpoint_dnsgroupname_keyVault": "[concat(parameters('private_endpoint_keyVault'),'/','default')]",
        "private_endpoint_dnsgroupname_acr": "[concat(parameters('private_endpoint_acr'),'/','default')]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/privateEndpoints",
            "apiVersion": "2020-05-01",
            "name": "[parameters('private_endpoint_keyVault')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('spokeVnetName'), variables('privateEndpointSubnet'))]"
                },
                "privateLinkServiceConnections": [
                {
                    "name": "[parameters('private_endpoint_keyVault')]",
                    "properties": {
                    "privateLinkServiceId": "[resourceId('Microsoft.KeyVault/vaults',variables('uniqueVaultName'))]",
                    "groupIds": [
                        "vault"
                    ]
                    }
                }
                ]
            }
        },
        {
            "type": "Microsoft.Network/privateEndpoints",
            "apiVersion": "2020-05-01",
            "name": "[parameters('private_endpoint_acr')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "subnet": {
                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('spokeVnetName'), variables('privateEndpointSubnet'))]"
                },
                "privateLinkServiceConnections": [
                {
                    "name": "[parameters('private_endpoint_acr')]",
                    "properties": {
                    "privateLinkServiceId": "[resourceId('Microsoft.ContainerRegistry/registries',variables('uniqueAcrName'))]",
                    "groupIds": [
                        "registry"
                    ]
                    }
                }
                ]
            }
        },
            {
            "name": "[variables('private_acr_dns_zone')]",
            "type": "Microsoft.Network/privateDnsZones",
            "apiVersion": "2018-09-01",
            "location": "global",
            "properties": {                
            }
        },
        {
            "name": "[variables('private_keyVault_dns_zone')]",
            "type": "Microsoft.Network/privateDnsZones",
            "apiVersion": "2018-09-01",
            "location": "global",
            "properties": {                
            }
        },
        {
            "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
            "apiVersion": "2018-09-01",
            "name": "[concat(variables('private_acr_dns_zone'), '/aksvnetlink')]",
            "location": "global",
            "dependsOn": [
                "[resourceId('Microsoft.Network/privateDnsZones', variables('private_acr_dns_zone'))]"
            ],
            "properties": {
                "registrationEnabled": false,
                "virtualNetwork": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks',variables('spokeVnetName'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
            "apiVersion": "2018-09-01",
            "name": "[concat(variables('private_keyVault_dns_zone'), '/aksvnetlink')]",
            "location": "global",
            "dependsOn": [
                "[resourceId('Microsoft.Network/privateDnsZones', variables('private_keyVault_dns_zone'))]"
            ],
            "properties": {
                "registrationEnabled": false,
                "virtualNetwork": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks',variables('spokeVnetName'))]"
                }
            }
        },
        {
        "apiVersion": "2017-05-10",
        "name": "aRecord",
        "type": "Microsoft.Resources/deployments",
        "dependsOn": [
            "[resourceId('Microsoft.Network/privateEndpoints',parameters('private_endpoint_keyVault'))]",
            "[resourceId('Microsoft.Network/privateEndpoints',parameters('private_endpoint_acr'))]"
        ],
        "properties": 
            {
                "mode": "Incremental",
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "parameters": {
                    "acr_name": {
                        "value": "[parameters('acr_name')]"
                    },
                    "keyVault_name":{
                        "value": "[parameters('keyVault_name')]"
                    },
                    "ACR_NetworkInterfaceId": {
                        "value": "[reference(parameters('private_endpoint_acr')).networkInterfaces[0].id]"
                    },
                    "keyvault_NetworkInterfaceId": {
                        "value": "[reference(parameters('private_endpoint_keyVault')).networkInterfaces[0].id]"
                    }
                },
                "template": {
                    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "acr_name": {
                            "type": "string"
                        },
                        "keyVault_name":{
                            "type": "string"
                        },
                        "ACR_NetworkInterfaceId": {
                            "type": "string"
                        },
                        "keyVault_NetworkInterfaceId": {
                            "type": "string"
                        }
                    },
                    "variables": {
                        "acr_name_data": "[concat(parameters('acr_name'),'.',resourceGroup().location,'.','data')]"
                    },
                    "resources": [
                        {
                            "type": "Microsoft.Network/privateDnsZones/A",
                            "apiVersion": "2018-09-01",
                            "name": "[concat('privatelink.vaultcore.azure.net','/',parameters('keyvault_name'))]",
                            "properties": {
                                "ttl": 30,
                                "aRecords": [
                                    {
                                        "ipv4Address": "[reference(parameters('keyvault_NetworkInterfaceId'), '2020-05-01', 'Full').properties.ipConfigurations[0].properties.privateIPAddress]"
                                    }
                                ]
                            }
                        },
                        {
                            "type": "Microsoft.Network/privateDnsZones/A",
                            "apiVersion": "2018-09-01",
                            "name": "[concat('privatelink.azurecr.io','/',parameters('acr_name'))]",
                            "properties": {
                                "ttl": 30,
                                "aRecords": [
                                    {
                                        "ipv4Address": "[reference(parameters('acr_NetworkInterfaceId'), '2020-05-01', 'Full').properties.ipConfigurations[1].properties.privateIPAddress]"
                                    }                                       
                                ]
                            }
                        },
                        {
                            "type": "Microsoft.Network/privateDnsZones/A",
                            "apiVersion": "2018-09-01",
                            "name": "[concat('privatelink.azurecr.io','/',variables('acr_name_data'))]",
                            "properties": {
                                "ttl": 30,
                                "aRecords": [
                                    {
                                        "ipv4Address": "[reference(parameters('acr_NetworkInterfaceId'), '2020-05-01', 'Full').properties.ipConfigurations[0].properties.privateIPAddress]"
                                    }                                      
                                ]
                            }
                        }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Network/privateEndpoints/privateDnsZoneGroups",
            "apiVersion": "2020-05-01",
            "name": "[variables('private_endpoint_dnsgroupname_acr')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/privateEndpoints', parameters('private_endpoint_acr'))]"
            ],
            "properties": {
                "privateDnsZoneConfigs": [{
                        "name": "ACR",
                        "properties": {
                            "privateDnsZoneId": "[resourceId('Microsoft.Network/privateDnsZones', variables('private_acr_dns_zone'))]"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/privateEndpoints/privateDnsZoneGroups",
            "apiVersion": "2020-05-01",
            "name": "[variables('private_endpoint_dnsgroupname_keyVault')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/privateEndpoints', parameters('private_endpoint_keyVault'))]"
            ],
            "properties": {
                "privateDnsZoneConfigs": [{
                        "name": "KeyVault",
                        "properties": {
                            "privateDnsZoneId": "[resourceId('Microsoft.Network/privateDnsZones', variables('private_keyVault_dns_zone'))]"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {}
}